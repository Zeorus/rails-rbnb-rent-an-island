<div class="container">
  <div class="row py-4">
    <div class="col-md-3">
      <% if @order.island.photos.attached? %>
          <%= cl_image_tag @order.island.photos[0].key %>
        <% else %>
          <%= image_tag "missing_img", width: '100%'%>
        <% end %>
    </div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>Island</strong> <%= @order.island.name %> [<%= @order.island.country %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
      <p>See you soon for your journey ! <strong>2 business days</strong></p>
    </div>
  </div>
</div>
