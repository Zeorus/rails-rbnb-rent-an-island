<div class="container1 container">
  <%= link_to "Back", islands_path, class:"button back" %>
  <div class=" card-payement row py-4">
    <div class="col-md-3">
      <% if @order.booking.island.photos.attached? %>
          <%= cl_image_tag @order.booking.island.photos[0].key, class:"img-payement" %>
        <% else %>
          <%= image_tag "missing_img", width: '100%', class:"img-payement"%>
        <% end %>
    </div>
    <div class="col">
      <h1>Order <%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>Island</strong> <%= @order.booking.island.name %> [<%= @order.booking.island.country %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
    </div>
  </div>
</div>
