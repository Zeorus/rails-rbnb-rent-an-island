<div class="container mt-4">
  <h1>My islands</h1>
  <% @user_islands.each do |island| %>
    <div class="user-island-card">
      <div class="user-island-card-top">
        <div class="user-island-card-img">
          <% if island.photo.attached? %>
            <%= cl_image_tag island.photo.key %>
          <% else %>
            <%= image_tag "missing_img.jpg" %>
          <% end %>
        </div>
        <div class="user-island-card-content">
          <h2><%= island.name %></h2>
          <h4> <%= island.country %></h4>
          <%= link_to "<i class='fas fa-pencil-alt'></i>".html_safe, edit_island_path(island), class: "user-island-card-edit", title: 'Edit', data: { toggle: 'tooltip' } %>
          <i id="sweet-alert-delete" class="fas fa-trash-alt user-island-card-delete", title='Delete', data-toggle='tooltip'></i>
          <%= link_to "", island_path(island), method: :delete, id: "delete-island", class: "hidden" %>
          <span class="user-island-card-location"><i class="fas fa-compass"></i> <%= island.latitude %>, <%= island.longitude %></span>
          <span class="user-island-card-area"><i class="fas fa-chart-area"></i> <%= island.area %> kmÂ²</span>
          <span class="user-island-card-price"><i class="fas fa-dollar-sign"></i><%= island.price_per_day %> / Day</span>
        </div>
      </div>
      <div class="user-island-card-bottom">
        <p><%= island.description %></p>
      </div>
    </div>
  <% end %>
</div>
