<div class="content">
  <div class="cards">
    <% @islands.each do |island| %>
      <div class="card">
        <%= link_to island_path(island) do %>
        <% if island.photo.attached?%>
          <%= cl_image_tag island.photo.key, class: "w-100" %>
        <% else %>
          <%= image_tag "missing_img.jpg",class: "w-100" %>
        <% end %>
        <div class="info">
        <h4><%= island.name %> - <span class="country"><%= island.country %><i class="country-flag"></i></span></h4>
        <h5><%= island.price_per_day %>/day</h5>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
