<div class="container">
  <%= simple_form_for(island) do |f| %>
  <%= f.input :name %>
  <%= f.input :country %>
  <%= f.input :description %>
  <%= f.input :longitude %>
  <%= f.input :latitude %>
  <%= f.input :area %>
  <%= f.input :price_per_day %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
</div>

